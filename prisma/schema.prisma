// Incident Replay Engine - Database Schema
// PostgreSQL via Prisma ORM

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())

  projects       Project[]
  changeHistory  ChangeHistory[]
}

model Project {
  id              String   @id @default(uuid())
  userId          String
  name            String
  description     String?
  incidentDate    DateTime @db.Date
  incidentTime    DateTime? @db.Time
  location        String?
  sceneType       String   // 'vessel-deck' | 'port-road'
  dimensions      Json     // { width: number, height: number } in meters
  backgroundImage String?
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  objects        SceneObject[]
  keyframes      Keyframe[]
  changeHistory  ChangeHistory[]

  @@index([userId])
}

model SceneObject {
  id         String   @id @default(uuid())
  projectId  String
  assetId    String   // References asset definition (e.g., "mafi-truck-v1")
  type       String   // 'vehicle' | 'actor' | 'safety-object'
  locked     Boolean  @default(false)
  properties Json     @default("{}") // Extensible properties (JSONB)
  createdAt  DateTime @default(now())

  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  objectStates  ObjectState[]

  @@index([projectId])
}

model Keyframe {
  id          String   @id @default(uuid())
  projectId   String
  label       String   // e.g., "T0: Truck arrives"
  timestamp   Float    // seconds from T0
  description String?
  createdAt   DateTime @default(now())

  project       Project        @relation(fields: [projectId], references: [id], onDelete: Cascade)
  objectStates  ObjectState[]

  @@index([projectId])
}

model ObjectState {
  id         String   @id @default(uuid())
  keyframeId String
  objectId   String
  position   Json     // { x: number, y: number } in meters
  rotation   Float    // degrees (0-360)
  properties Json     @default("{}") // Object-specific properties at this keyframe
  visible    Boolean  @default(true)
  createdAt  DateTime @default(now())

  keyframe Keyframe    @relation(fields: [keyframeId], references: [id], onDelete: Cascade)
  object   SceneObject @relation(fields: [objectId], references: [id], onDelete: Cascade)

  @@unique([keyframeId, objectId]) // One state per object per keyframe
  @@index([keyframeId])
}

model ChangeHistory {
  id        String   @id @default(uuid())
  projectId String
  userId    String
  action    String   // 'add_object', 'move_object', 'delete_object', etc.
  targetId  String?  // Object ID or keyframe ID
  oldValue  Json?    // Previous state (JSONB)
  newValue  Json?    // New state (JSONB)
  timestamp DateTime @default(now())

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])

  @@index([projectId])
  @@index([timestamp])
}
